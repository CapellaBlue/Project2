<!DOCTYPE html>
<html>
    <head>
        <%include ../../partials/head.ejs%>
    </head>
    <body>
        <header class="header-other">
            <%include ../../partials/header.ejs%>
        </header>
        <h2><%=story.title%></h2>
        <h4>by: <a href="/users/<%=user.id%>"><%=story.username%></a></h4>
        <main id="story-show-main-div">
			<section>
                <h3><%=story.draft%></h3>
                <p><%=story.ordinaryWorld%></p>
                <p><%=story.callToAction%></p>
                <p><%=story.refusal%></p>
                <p><%=story.mentorHelper%></p>
                <p><%=story.crossingThreshold%></p>
                <p><%=story.landOfAdventure%></p>
                <p><%=story.roadOfTrials%></p>
                <p><%=story.approach%></p>
                <p><%=story.ordeal%></p>
                <p><%=story.reward%></p>
                <p><%=story.roadBack%></p>
                <p><%=story.atonement%></p>
                <p><%=story.return%></p>
			</section>
			<section>
			    <h3>Feedback section?</h3>
			</section>
            <% if(currentUser === undefined){ %>
            <section>
                <a href="/users/new">Sign In or Register to spin your new \yärn\</a><br/>
            </section>
            <% } else if(currentUser.username === user.username){ %>
                <section>
                    <a href="/stories/new">Spin a new \yärn\</a><br/>
    				<a href="/stories/<%=story._id%>/edit">Edit</a>
                    <form action="/stories/<%=story.id%>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete Story"/>
                </form>
    			</section>
            <% } else if(currentUser !== undefined && currentUser.username !== user.username){ %>
            <section>
                <form action="/stories" method="POST">
                    <textarea name="feedback" rows="8" cols="80"></textarea>
                </form>
            </section>
            <% }%>


		</main>
        <footer class="footer-distributed">
            <%include ../../partials/footer.ejs%>
        </footer>
    </body>
</html>
